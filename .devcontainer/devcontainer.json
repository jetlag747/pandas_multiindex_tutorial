{
  "name": "Python UV Auto",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        // On force VS Code à utiliser le venv créé dans le Dockerfile
        "python.defaultInterpreterPath": "/home/vscode/.venv/bin/python",
        "python.terminal.activateEnvironment": true
      }
    }
  },
  
  // Ici, on fait juste la sync des librairies (pandas, etc.)
  // On ajoute "|| true" pour ne pas bloquer si pyproject.toml n'existe pas encore
  "postCreateCommand": "uv sync || true",

  "remoteUser": "vscode"
}