{
  "name": "Python + uv (Debian Slim, pinned Python)",

  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },

  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  "remoteUser": "vscode",

  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter"
      ]
    }
  },

  "postCreateCommand": "uv python install && uv venv .venv && uv sync --python .venv/bin/python"
}
